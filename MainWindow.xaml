        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DT_pihmed_pozicio"
        mc:Ignorable="d"
        Title="Position in spent-fuel-pool" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition>

            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Background="Beige">
            <RadioButton x:Name="rb_real_time" Content="Real time measurement"/>
            <RadioButton x:Name="rb_map" Content="Pool map"/>
            <RadioButton x:Name="rb_navigation" Content="Navigation"/>
        </StackPanel>
        <Canvas x:Name="canvas_real_time" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="399" Width="614"/>
    </Grid>
</Window>
